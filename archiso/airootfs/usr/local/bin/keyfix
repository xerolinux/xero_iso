#!/bin/bash
#set -e
echo "#################################"
echo "Fixing Pacman Databases"
echo "#################################"
sleep 2
echo "Deleting Existing Keys"
echo "#################################"
sudo rm /var/lib/pacman/sync/*
sleep 2
echo "Deleting gnupg files"
echo "#################################"
sudo rm -r /etc/pacman.d/gnupg/*
sleep 2
echo "Populating Keys anew"
echo "#################################"
sudo pacman-key --init && sudo pacman-key --populate
sleep 2
echo "Restarting Pacman-Init Service"
echo "#################################"
sudo systemctl restart pacman-init.service
sleep 2
echo "#################################"
echo "Done ! Try Update now & Report"
echo "#################################"
